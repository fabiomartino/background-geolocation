{
    "name": "@capacitor-community/background-geolocation",
    "version": "1.2.22",
    "description": "Receive geolocation updates even while the app is in the background.",
    "files": [
        "android/build.gradle",
        "android/settings.gradle",
        "android/proguard-rules.pro",
        "android/gradle/wrapper/gradle-wrapper.properties",
        "android/gradle.properties",
        "android/src/main/",
        "ios/Sources",
        "ios/Tests",
        "Package.swift",
        "CapacitorCommunityBackgroundGeolocation.podspec",
        "definitions.d.ts"
    ],
    "keywords": [
        "capacitor",
        "plugin",
        "native",
        "geolocation",
        "background"
    ],
    "scripts": {
      "verify": "npm run verify:ios && npm run verify:android && npm run verify:web",
      "verify:ios": "xcodebuild -scheme CapacitorCommunityBackgroundGeolocation -destination generic/platform=iOS",
      "verify:android": "cd android && ./gradlew clean build test && cd ..",
      "verify:web": "npm run build",
      "lint": "npm run eslint && npm run prettier -- --check && npm run swiftlint -- lint",
      "fmt": "npm run eslint -- --fix && npm run prettier -- --write && npm run swiftlint -- --fix --format",
      "eslint": "eslint . --ext ts",
      "prettier": "prettier \"**/*.{css,html,ts,js,java}\" --plugin=prettier-plugin-java",
      "swiftlint": "node-swiftlint",
      "docgen": "docgen --api BackgroundGeolocationPlugin --output-readme README.md --output-json dist/docs.json",
      "build": "npm run clean && npm run docgen && tsc && rollup -c rollup.config.mjs",
      "clean": "rimraf ./dist",
      "watch": "tsc --watch",
      "removePacked": "rimraf -g capacitor-community-background-geolocation-*.tgz",
      "publish:locally": "npm run removePacked && npm run build && npm pack",
      "prepublishOnly": "npm run build"
    },
    "author": "James Diacono",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/capacitor-community/background-geolocation"
    },
    "bugs": {
      "url": "https://github.com/capacitor-community/background-geolocation/issues"
    },
    "types": "definitions.d.ts",
    "devDependencies": {
        "@capacitor/android": "^7.0.0",
        "@capacitor/core": "^7.0.0",
        "@capacitor/ios": "^7.0.0"
    },
    "peerDependencies": {
        "@capacitor/core": ">=7.0.0"
    },
    "capacitor": {
        "ios": {
            "src": "ios"
        },
        "android": {
            "src": "android"
        }
    }
}
